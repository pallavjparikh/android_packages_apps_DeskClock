<?xml version="1.0" encoding="utf-8"?>
<animated-selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:id="@id/checked" android:drawable="@drawable/bg_day_button_white" />
    <item android:id="@id/unchecked" android:drawable="@drawable/bg_day_button_transparent" />
    <transition android:drawable="@drawable/bg_day_button_unchecked_to_checked_anim" android:toId="@id/checked" android:fromId="@id/unchecked" />
    <transition android:drawable="@drawable/bg_day_button_checked_to_unchecked_anim" android:toId="@id/unchecked" android:fromId="@id/checked" />
</animated-selector>